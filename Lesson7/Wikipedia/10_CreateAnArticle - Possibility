package com.example.tests;

import com.thoughtworks.selenium.Selenium;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.WebDriver;
import com.thoughtworks.selenium.webdriven.WebDriverBackedSelenium;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import static org.junit.Assert.*;
import java.util.regex.Pattern;
import static org.apache.commons.lang3.StringUtils.join;

public class CreateAnArticlePossibility {
	private Selenium selenium;

	@Before
	public void setUp() throws Exception {
		WebDriver driver = new FirefoxDriver();
		String baseUrl = "https://www.katalon.com/";
		selenium = new WebDriverBackedSelenium(driver, baseUrl);
	}

	@Test
	public void testCreateAnArticlePossibility() throws Exception {
		selenium.open("https://ru.wikipedia.org/wiki/%D0%97%D0%B0%D0%B3%D0%BB%D0%B0%D0%B2%D0%BD%D0%B0%D1%8F_%D1%81%D1%82%D1%80%D0%B0%D0%BD%D0%B8%D1%86%D0%B0");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='русском языке'])[1]/following::span[1]");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='и затем вернуться сюда'])[2]/following::span[1]");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='>> Я пишу о новом слове или фразе'])[1]/following::span[1]");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='Ваша статья отвечает требованиям значимости?'])[1]/following::span[1]");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='Ваша статья подкреплена источниками?'])[1]/following::span[1]");
		selenium.click("xpath=(.//*[normalize-space(text()) and normalize-space(.)='Ваша статья отвечает этим требованиям?'])[1]/following::span[1]");
	}

	@After
	public void tearDown() throws Exception {
		selenium.stop();
	}
}
